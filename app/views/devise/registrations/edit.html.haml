.row
  .large-6.medium-8.columns.large-centered.medium-centered
    .authform
      %h4= t('editing_profile')
      %hr
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, validate: true) do |f|
        = f.input :name
        = f.input :email
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p== Currently waiting confirmation for: #{resource.unconfirmed_email}
        = f.input :password, autocomplete: "off", hint: t('leave_it_blank')
        = f.input :password_confirmation
        = f.input :current_password, hint: t('we_need_your_current_password')
        = f.button :submit, t('helpers.submit.update', model: 'perfil'), :'data-disable-with' => t('helpers.on_disable'), class: 'right tiny'

    = t('unhappy')
    = link_to t('cancel_your_account'), registration_path(resource_name), data: { confirm: t('are_you_sure') }, method: :delete
