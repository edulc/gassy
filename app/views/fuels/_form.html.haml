= simple_form_for(fuel) do |f|
  .form-inputs
    = f.input :name
    = f.input :status, as: :select, collection: [:active, :inactive], selected: :active

  .form-actions
    = f.button :submit, t('helpers.submit.save', model: 'tipo'), :'data-disable-with' => t('helpers.on_disable'), class: 'tiny right button'
