%nav.top-bar{"data-topbar" => "", :role => "navigation", "data-options" => "is_hover: false"}
  %ul.title-area
    %li.name
      %h1
        = link_to 'Gassy', root_path
    / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
    %li.toggle-topbar.menu-icon
      = link_to 'Menu', '#'
  %section.top-bar-section
    / Right Nav Section
    %ul.right
      - if user_signed_in?
        %li.has-dropdown
          = link_to current_user.name, '#'
          %ul.dropdown
            %li= link_to 'Edit profile', edit_user_registration_path
            %li.active= link_to 'Logout', destroy_user_session_path, method: :delete
      - else
        %li.has-form= link_to 'Sign in', new_user_session_path, class: 'button'
    / Left Nav Section
    / %ul.left
    /   %li
    /     = link_to 'Left Nav Button', '#'
